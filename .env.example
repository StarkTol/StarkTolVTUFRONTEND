# Environment Configuration
# Copy this file to .env.local for development or .env.production for production

# Shared Environment Variable - Backend Base URL
# For development, use: http://localhost:8000
# For production, use: https://your-backend-app.onrender.com
BACKEND_BASE_URL=http://localhost:8000

# API Configuration
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_FALLBACK_API_BASE=https://your-backend-app.onrender.com
NEXT_PUBLIC_FALLBACK_BASE_URL=https://your-backend-app.onrender.com/api/v1

# Auto-detection settings
NEXT_PUBLIC_AUTO_DETECT_BACKEND=true
USE_LOCAL_BACKEND=auto

# Supabase Configuration (for real-time updates)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Flutterwave Configuration
# Get these keys from your Flutterwave dashboard: https://dashboard.flutterwave.com/settings/api-keys
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_WEBHOOK_HASH=your_webhook_hash

# Application Environment
NODE_ENV=development

# Frontend URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=true

# CORS Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-app.onrender.com
